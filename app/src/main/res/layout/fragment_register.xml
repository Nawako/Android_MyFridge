<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whitebg"
    
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/user_img"
      
        android:layout_centerHorizontal="true"
       android:src="@drawable/dp"
        android:padding="15dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/user_first_name"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/user_img"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_et"
        android:hint="Prénom"
        android:singleLine="true"
        android:layout_marginTop="15dp"
        android:paddingLeft="15dp"
        android:textColor="@color/royal_blue"
        android:textColorHint="@color/royal_blue"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/user_last_name"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/user_first_name"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_et"
        android:hint="Nom de famille"
        android:singleLine="true"
        android:paddingLeft="15dp"
        android:textColor="@color/royal_blue"
        android:textColorHint="@color/royal_blue"
        android:layout_marginTop="15dp"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/user_display_name"
        android:layout_below="@+id/user_last_name"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_et"
        android:hint="Pseudonyme"
        android:layout_marginLeft="10dp"
        android:paddingLeft="15dp"
        android:singleLine="true"
        android:textColor="@color/royal_blue"
        android:textColorHint="@color/royal_blue"
        android:layout_marginTop="15dp"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/user_email"
            android:layout_below="@+id/user_display_name"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_et"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:paddingLeft="15dp"
            android:textColor="@color/royal_blue"
            android:textColorHint="@color/royal_blue"
            android:layout_marginTop="15dp"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/user_phno"
        android:layout_below="@+id/user_email"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_et"
        android:paddingLeft="15dp"
        android:hint="Numéro de téléphone"
        android:singleLine="true"
        android:inputType="number"
        android:textColor="@color/royal_blue"
        android:textColorHint="@color/royal_blue"
        android:layout_marginTop="15dp"/>
        <EditText
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:id="@+id/user_password"
            android:layout_below="@+id/user_phno"
            android:layout_centerHorizontal="true"
            android:background="@drawable/custom_et"
            android:paddingLeft="15dp"
            android:hint="Mot de passe"
            android:singleLine="true"
            android:inputType="textPassword"
            android:textColor="@color/royal_blue"
            android:textColorHint="@color/royal_blue"
            android:layout_marginTop="15dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/btn_register"
        android:layout_below="@+id/user_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_button"
        android:text="S'enregistrer"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:textStyle="bold"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_below="@+id/btn_register"
        android:layout_marginTop="15dp"></View>
    </RelativeLayout>
    </ScrollView>

        </RelativeLayout>




