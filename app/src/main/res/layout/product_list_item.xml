<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_list_itembg"
    >
    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/productitemimg"
        android:src="@drawable/dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="Nom du produit"
        android:layout_toRightOf="@+id/productitemimg"
        android:layout_alignTop="@+id/productitemimg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/product_expiry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="Date d'expiration :"
        android:layout_toRightOf="@+id/productitemimg"
        android:layout_alignLeft="@+id/product_name"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/product_name"
        android:textStyle="bold"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/product_added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="Date d'ajout :"
        android:layout_toRightOf="@+id/productitemimg"
        android:layout_alignLeft="@+id/product_name"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/product_expiry"
        android:textStyle="bold"/>


</RelativeLayout>