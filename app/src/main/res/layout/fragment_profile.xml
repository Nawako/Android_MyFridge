<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whitebg"

    android:layout_marginLeft="10dp"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/user_dp"
        android:src="@drawable/dp"
        android:padding="10dp"
        
        android:layout_centerHorizontal="true"
      
        android:layout_marginTop="35dp"/>

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/royal_blue"
        android:textSize="16sp"
        android:text="Prénom :"
        android:layout_below="@+id/user_dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="25dp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/royal_blue"
        android:textSize="16sp"
        android:text="Nom de famille :"
        android:layout_alignLeft="@+id/user_name"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/user_name"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/royal_blue"
        android:textSize="16sp"
        android:text="Pseudonyme :"
        android:layout_toRightOf="@+id/user_dp"
        android:layout_alignLeft="@+id/user_name"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/last_name"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/phno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/royal_blue"
        android:textSize="16sp"
        android:text="Numéro de téléphone :"
        android:layout_alignLeft="@+id/user_name"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/display_name"
        android:textStyle="bold"/>
    <EditText
        android:id="@+id/first_name_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/royal_blue"
        android:textSize="14sp"
        android:text="Prénom"
        android:singleLine="true"
        android:layout_toRightOf="@id/user_name"
        android:layout_alignBottom="@id/user_name"
        android:layout_marginLeft="45dp"
        android:textStyle="normal"
        android:background="@null"/>
    <EditText
        android:id="@+id/last_name_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/royal_blue"
        android:textSize="14sp"
        android:text="Nom de famille"
        android:singleLine="true"
        android:layout_toRightOf="@id/last_name"
        android:layout_alignBottom="@id/last_name"
        android:layout_alignLeft="@+id/first_name_val"
        android:textStyle="normal"
        android:background="@null"/>
    <EditText
        android:id="@+id/display_name_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/royal_blue"
        android:textSize="14sp"
        android:text="Pseudonyme"
        android:singleLine="true"
        android:background="@null"
        android:layout_toRightOf="@id/last_name"
        android:layout_alignBottom="@id/display_name"
        android:layout_marginLeft="45dp"
        android:textStyle="normal"/>
        <EditText
            android:id="@+id/phno_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/royal_blue"
            android:textSize="14sp"
            android:text="Numéro de téléphone"
            android:inputType="number"
            android:singleLine="true"
            android:background="@null"
            android:layout_toRightOf="@id/last_name"
            android:layout_alignBottom="@id/phno"
            android:layout_marginLeft="45dp"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/royal_blue"
            android:textSize="16sp"
            android:text="Email :"
            android:layout_alignLeft="@+id/user_name"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/phno"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/email_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/royal_blue"
            android:textSize="14sp"
            android:text="Email"
            android:inputType="textWebEmailAddress"
            android:background="@null"
            android:singleLine="true"
            android:layout_toRightOf="@id/last_name"
            android:layout_alignBottom="@id/email"
            android:layout_marginLeft="10dp"
            android:textStyle="normal"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:id="@+id/btn_edit_profile"
        android:layout_centerHorizontal="true"
        android:text="Editer le profil"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/custom_addprobtn"
        android:layout_below="@+id/email"
        android:layout_marginTop="25dp"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_below="@+id/btn_edit_profile"
            android:layout_marginTop="15dp"></View>
    </RelativeLayout>
    </ScrollView>





</RelativeLayout>