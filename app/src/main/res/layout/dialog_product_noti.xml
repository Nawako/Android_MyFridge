<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_rectangle"
    android:layout_centerHorizontal="true"
    android:padding="15dp"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/productitemimg"
        android:src="@drawable/dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="Nom du produit     "
        android:layout_toRightOf="@+id/productitemimg"
        android:layout_alignTop="@+id/productitemimg"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/product_added"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="Date d'ajout :"
        android:layout_toRightOf="@+id/productitemimg"
        android:layout_alignLeft="@+id/product_name"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/product_name"
        android:textStyle="bold"/>




</RelativeLayout>